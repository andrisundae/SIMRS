{
  "name": "simrs-client",
  "version": "1.0.0",
  "description": "Aplikasi SIMRS Client",
  "main": "index.js",
  "author": "LINKAR Team Development",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "wsrun --exclude-missing start",
    "desktop": "yarn workspace @simrs/main desktop",
    "build-desktop": "yarn workspace @simrs/main build-desktop",
    "prebuild-desktop": "wsrun --exclude-missing build",
    "storybook": "wsrun -p @simrs/components -c storybook"
  },
  "workspaces": {
    "packages": [
      "app/*",
      "module/*",
      "shared/*"
    ],
    "nohoist": [
      "**/dotenv",
      "**/dotenv/**",
      "**/electron",
      "**/electron/**",
      "**/electron-is-dev",
      "**/electron-is-dev/**",
      "**/electron-devtools-installer",
      "**/electron-devtools-installer/**",
      "**/babel-loader",
      "**/babel-loader/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "husky": "^4.2.3",
    "prettier": "2.0.4",
    "pretty-quick": "^2.0.1",
    "wsrun": "^5.0.0"
  }
}
